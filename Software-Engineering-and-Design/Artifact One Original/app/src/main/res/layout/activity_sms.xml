<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="24dp">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/smsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sms_title"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/smsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sms_description"
                android:textColor="#CCCCCC"
                android:textSize="16sp"
                android:layout_marginBottom="32dp" />

            <Button
                android:id="@+id/requestSmsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_request_sms"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:backgroundTint="#90CAF9"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/permissionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#90CAF9"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/sendTestSmsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_send_test_sms"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:backgroundTint="#388E3C"
                android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#1C1C1C"
        android:elevation="8dp"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled" />

</RelativeLayout>
